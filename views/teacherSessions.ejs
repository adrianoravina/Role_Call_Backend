    body {
      margin: 0;
      background-image: url(https://images.unsplash.com/photo-1586776977607-310e9c725c37?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80);
      background-size: cover;
      background-repeat: no-repeat;
      background-position: unset;
    }

    .headerStyle {
      position: absolute;
      top: 0;
      right: 0;
    }

    .logOut {
      width: 150px;
      background-color: #233249;
      color: white;
    }

    .bigHeader {
      background-color: #EA5045;
    }

    .bigHeader h1 {
      text-align: center;
      margin-top: 0;
      padding: 20px;
      cursor: pointer;
    }



    .navBar {
      position: absolute;
      top: 30px;
      left: 19px
    }

    .navBar a {
      transition: all 0.3s;
      color: black;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      font-size: 17px;
    }

    .navBar a:hover {
      background-color: #233249;
      color: #f2f2f2;
    }

    .sessionsWrapper h2 {
      margin-bottom: 0;
    }

    .sessionsWrapper {
      border: 1px solid;
      text-align: center;
      height: auto;
      position: relative;
      padding: 10px;
      padding-top: 10px;
      width: 40%;
      margin: auto;
      margin-top: 30px;
      box-shadow: rgb(50 50 93 / 25%) 0px 50px 100px -20px, rgb(0 0 0 / 30%) 0px 30px 60px -30px, rgb(10 37 64 / 35%) 0px -2px 6px 0px inset;
      background-color: white;
      opacity: 0.97;
    }

    .sessionsWrapper form {
      padding: 40px 20px 40px;

    }

    .input-wrapper {
      width: 70%;
      margin: auto;
      text-align: left;
    }

    .input-wrapper textarea {
      width: 100%;
      margin-bottom: 40px;
    }

    .input-wrapper input {
      width: 100%;
      margin-bottom: 40px;
      height: 20px;
    }

    #numOfBlocks,
    #timeOfBlocks {
      width: 40px;
    }

    .numberScroll input,
    .minutesScroll input {
      float: right;
      clear: both;
    }

    .sessionButtonWrapper {
      clear: both;
    }

    .sessionButtonWrapper button {
      background-color: #EA5045;
      font-weight: bold;
      color: white;
      padding: 10px 40px;
      margin-top: 20px;
      font-size: 17px;
      cursor: pointer;
    }

    .numberScroll,
    .minutesScroll {
      clear: both;
      margin-bottom: 40px;
    }



    footer {
      text-align: center;
      background-color: #EA5045;
      color: black;
      bottom: 0;
      width: 100%;
      position: absolute;
      bottom: 0;
    }

    footer p {
      margin-bottom: 0;
    }

    @media screen and (max-width: 1700px) {

      .header-row .col.headerDate {
        padding: 29px 0px;
      }
    }


    /*
    teacher sessions styling
    */

    .div-table {
      display: flex;
      text-align: center;
      background-color: #233249;
      justify-content: space-around;
      margin: auto;
      width: 90%;
      padding: 20px;
    }

    .div-table .header-row {
      width: 10%;
    }

    .div-table .header-row .row {
      width: 100%;
    }

    .col.headerDate {
      padding: 20px 0;
    }

    .col.button {
      padding: 12px 0px;
    }

    .col.button button:before {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0%;
      height: 100%;
      background-color: #233249;
      transition: all 0.3s;
      border-radius: 2rem;
      z-index: -1;
    }

    .col.button button:hover:before {
      width: 100%;
    }

    .col.button button:after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: #EA5045;
      border-radius: 2rem;
      z-index: -2;
    }

    .col.button button:hover {
      color: white;
    }

    .col.button button {
      cursor: pointer;
      background-color: #EA5045;
      color: black;
      border-radius: 2rem;
      text-transform: uppercase;
      transition: all 0.3s;
      position: relative;
      overflow: hidden;
      z-index: 1;
      padding: 9px 15px 9px 15px;
    }

    .header-row {
      margin: 0px 10px;
    }

    .row {
      margin: 0 10px;
    }

    .col {
      border: 1px black solid;
      margin: auto;
      width: 100%;
      padding: 20px 0px;
      background-color: #EA5045;
    }
  </style>
</head>

<body>
  <header class="bigHeader" style="position: relative;">
    <h1>Teacher Page</h1>
    <div class="headerStyle"> <button class="logOut">Log Out</button></div>
    <div class="navBar">
      <a href="/teacherPage">Create Session</a>
      <a href="#">Teacher Sessions</a>
    </div>


  </header>
  <form action="/getTeacherBlocks" method="post" style="margin-top: 120px;">
    <div class="div-table">
      <div class="header-row">
        <div class="col header">Session Id</div>
        <div class="col header">Course name</div>
        <div class="col header">Class groups</div>
        <div class="col headerDate">Date and time</div>
        <div class="col header">Status</div>
        <div class="col header" style="min-height: 21px;"></div>
      </div>
      <% for(var i=0; i < data.length; i++) { %>
        <div class="row">
          <div class="col">
            <%= data[i].session_id %>
          </div>
          <div class="col">
            <%= data[i].course_name %>
          </div>
          <div class="col">
            <%= data[i].class_group_name %>
          </div>
          <div class="col">
            <%= data[i].s_date %>
          </div>
          <div class="col"> In Session </div>
          <div class="col button"><button type="submit" name="sessionId" value=<%=data[i].session_id %>>Go to
              blocks</button></div>
        </div>
        <% } %>

    </div>
  </form>
  <footer>
    <p>&copy; Thomas Nielsen & Adriano Ravina</p><br>
  </footer>
</body>

</html>